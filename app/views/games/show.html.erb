<div id="menu-btn" onclick="showMenu(event);">â˜°</div>

<div id="menu" class="gone">
    <div id="menu-top">
        <%= ("<div id=\"game-name\">#{sanitize  @game.title}</div>".html_safe) if @game.title.present? %>
